<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#07254e"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:src="@drawable/graph" />

    <LinearLayout
        android:id="@+id/svertical"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/corners"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:progress="70"
            android:progressDrawable="@drawable/solid_vertical" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:progress="100"
            android:progressDrawable="@drawable/solid_vertical" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:progress="50"
            android:progressDrawable="@drawable/solid_vertical" />

        <ProgressBar xmlns:tools="http://schemas.android.com/tools"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:progress="90"
            android:progressDrawable="@drawable/solid_vertical" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:progress="80"
            android:progressDrawable="@drawable/solid_vertical" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:progress="90"
            android:progressDrawable="@drawable/solid_vertical" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:progress="80"
            android:progressDrawable="@drawable/solid_vertical" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:progress="50"
            android:progressDrawable="@drawable/solid_vertical" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="40dp"
        android:text="Monthly Average"
        android:textColor="#FFF"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1">

            <ProgressBar
                android:id="@+id/month1circle"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:progress="65"
                android:progressDrawable="@drawable/circular_bar" />

            <TextView
                android:id="@+id/month1text"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="65%"
                android:textColor="#FFF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1">

            <ProgressBar
                android:id="@+id/month2circle"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:progress="50"
                android:progressDrawable="@drawable/circular_bar" />

            <TextView
                android:id="@+id/month2text"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="50%"
                android:textColor="#FFF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1">

            <ProgressBar
                android:id="@+id/month3circle"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:progress="30"
                android:progressDrawable="@drawable/circular_bar" />

            <TextView
                android:id="@+id/month3text"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="30%"
                android:textColor="#FFF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingLeft="40dp"
        android:paddingRight="40dp">

        <TextView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:text="Progress"
            android:textColor="#FFF"
            android:textSize="16sp" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:progress="60"
            android:progressDrawable="@drawable/gradiant_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingLeft="40dp"
        android:paddingRight="40dp">

        <TextView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:text="Run"
            android:textColor="#FFF"
            android:textSize="16sp" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:progress="40"
            android:progressDrawable="@drawable/gradiant_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingLeft="40dp"
        android:paddingRight="40dp">

        <TextView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:text="Health"
            android:textColor="#FFF"
            android:textSize="16sp" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:progress="80"
            android:progressDrawable="@drawable/gradiant_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="@drawable/corners"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/wp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="70dp"
            android:clickable="true"
            android:padding="10dp"
            android:src="@drawable/wp" />

        <ImageView
            android:id="@+id/wh"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="70dp"
            android:clickable="true"
            android:padding="10dp"
            android:src="@drawable/wh" />

        <ImageView
            android:id="@+id/bs"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="20dp"
            android:clickable="true"
            android:padding="10dp"
            android:src="@drawable/bs" />

    </LinearLayout>


</LinearLayout>