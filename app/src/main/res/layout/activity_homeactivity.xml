<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#07254e"
    android:orientation="vertical"
    tools:context=".homeactivity">

    <FrameLayout
        android:id="@+id/PROGRESS_BARf"
        android:layout_width="200dp"
        android:layout_height="234dp"
        android:layout_gravity="center_horizontal">

        <ProgressBar
            android:id="@+id/PROGRESS_BAR1"
            style="?android:attr/progressBarStyleHorizontal"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"

            android:progress="100"
            android:progressDrawable="@drawable/gradiant2"

            />

        <ProgressBar
            android:id="@+id/PROGRESS_BAR"
            style="?android:attr/progressBarStyleHorizontal"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"

            android:progress="65"
            android:progressDrawable="@drawable/gradiant"

            />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif"
                android:text="65%"
                android:textColor="#ffffff"
                android:textSize="45dp"
                android:textStyle="bold" />

        </RelativeLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="25dp"

        android:layout_marginRight="25dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/corners"

            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:paddingTop="10dp"
                android:text="Total Run"
                android:textColor="#ffffff"
                android:fontFamily="sans-serif"
                android:textSize="17dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="849"
                android:textColor="#ffffff"
                android:fontFamily="sans-serif"
                android:textSize="17dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/corners"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingTop="10dp"
                android:text="Average speed"
                android:textColor="#ffffff"
                android:fontFamily="sans-serif"
                android:textSize="17dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="420 m/h"
                android:textColor="#ffffff"
                android:fontFamily="sans-serif"
                android:textSize="17dp" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"

        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/mother"
            android:background="@drawable/corners">

            <TextView
                android:id="@+id/weakly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="20dp"
                android:clickable="true"
                android:linksClickable="true"
                android:text="Weekly Activity"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/vertical"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_below="@+id/weakly"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:paddingLeft="25dp">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ProgressBar
                        android:id="@+id/Sun"
                        style="@style/Widget.ProgressBar.Vertical"
                        android:layout_width="10dp"
                        android:layout_height="120dp"


                        android:progress="30"

                        android:progressDrawable="@drawable/vertical" />

                    <TextView

                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_below="@+id/Sun"
                        android:layout_alignParentLeft="true"
                        android:text="Sun"
                        android:textColor="#ffffff"
                        android:textSize="12dp"
                        android:fontFamily="sans-serif"
                        android:textStyle="bold" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ProgressBar
                        android:id="@+id/Mon"
                        style="@style/Widget.ProgressBar.Vertical"
                        android:layout_width="10dp"

                        android:layout_height="120dp"


                        android:progress="80"

                        android:progressDrawable="@drawable/vertical" />

                    <TextView
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_below="@+id/Mon"

                        android:text="Mon"
                        android:textColor="#ffffff"
                        android:textSize="12dp"
                        android:fontFamily="sans-serif"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ProgressBar
                        android:id="@+id/Tues"
                        style="@style/Widget.ProgressBar.Vertical"
                        android:layout_width="10dp"
                        android:layout_height="120dp"
                        android:progress="45"
                        android:progressDrawable="@drawable/vertical" />

                    <TextView

                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_below="@+id/Tues"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginRight="5dp"
                        android:text="Tue"
                        android:textColor="#ffffff"
                        android:textSize="12dp"
                        android:fontFamily="sans-serif"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ProgressBar
                        android:id="@+id/Wed"
                        style="@style/Widget.ProgressBar.Vertical"
                        android:layout_width="10dp"
                        android:layout_height="120dp"


                        android:progress="60"

                        android:progressDrawable="@drawable/vertical" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/Wed"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:text="Wed"
                        android:textColor="#ffffff"
                        android:textSize="12dp"
                        android:fontFamily="sans-serif"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ProgressBar
                        android:id="@+id/Thurs"
                        style="@style/Widget.ProgressBar.Vertical"
                        android:layout_width="10dp"
                        android:layout_height="120dp"


                        android:progress="50"

                        android:progressDrawable="@drawable/vertical" />

                    <TextView
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_below="@+id/Thurs"
                        android:layout_gravity="center_horizontal"
                        android:text="Thu"
                        android:textColor="#ffffff"
                        android:textSize="12dp"
                        android:fontFamily="sans-serif"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ProgressBar
                        android:id="@+id/Fri"
                        style="@style/Widget.ProgressBar.Vertical"
                        android:layout_width="10dp"
                        android:layout_height="120dp"


                        android:progress="60"

                        android:progressDrawable="@drawable/vertical" />

                    <TextView
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_below="@+id/Fri"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginRight="0dp"
                        android:text="Fri"
                        android:textColor="#ffffff"
                        android:textSize="12dp"
                        android:fontFamily="sans-serif"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ProgressBar
                        android:id="@+id/Sat"
                        style="@style/Widget.ProgressBar.Vertical"
                        android:layout_width="10dp"

                        android:layout_height="120dp"
                        android:progress="30"

                        android:progressDrawable="@drawable/vertical" />

                    <TextView
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_below="@+id/Sat"

                        android:layout_gravity="center_horizontal"
                        android:text="Sat"
                        android:textColor="#ffffff"
                        android:textSize="12dp"
                        android:fontFamily="sans-serif"
                        android:textStyle="bold" />
                </RelativeLayout>
            </LinearLayout>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/mother"
            android:background="@drawable/corners"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:onClick="profile"
                android:src="@drawable/wp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:src="@drawable/bh" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:clickable="true"
                android:onClick="chart"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:src="@drawable/ws" />

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>