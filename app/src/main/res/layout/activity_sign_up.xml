<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#07254e"
    android:orientation="vertical"
    tools:context=".SignUpActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/logo" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/names"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:background="@drawable/corners"
                android:hint="Parent Name"
                android:inputType="textPersonName"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textColor="#bdc8d9"
                android:textColorHint="#bdc8d9"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/patient_name"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:background="@drawable/corners"
                android:hint="Patient Name"
                android:inputType="textPersonName"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textColor="#bdc8d9"
                android:textColorHint="#bdc8d9"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/names"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/age"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:background="@drawable/corners"
                android:hint="Age"
                android:inputType="number"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textColor="#bdc8d9"
                android:textColorHint="#bdc8d9"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/gender"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:background="@drawable/corners"
                android:hint="Gender"
                android:inputType="text"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textColor="#bdc8d9"
                android:textColorHint="#bdc8d9"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/num"
            android:orientation="horizontal"
            android:textSize="15sp">

            <EditText
                android:id="@+id/Pass_word"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:background="@drawable/corners"
                android:hint="Password"
                android:inputType="numberPassword"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textColor="#bdc8d9"
                android:textColorHint="#bdc8d9"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/con_Pass_word"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:background="@drawable/corners"
                android:hint="Confirm Password"
                android:inputType="numberPassword"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textColor="#bdc8d9"
                android:textColorHint="#bdc8d9"
                android:textSize="12sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/pass"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/corners"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="#bdc8d9"
            android:textColorHint="#bdc8d9"
            android:textSize="15sp" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <Button
            android:id="@+id/next_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/custom_button"
            android:onClick="Sign_up"
            android:text="Sign up"
            android:textColor="#FFFFFF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/next_button"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sign_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/next_button"
                android:layout_marginTop="35dp"
                android:text="Already  have an account ?"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/sign_upP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/next_button"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="35dp"
                android:layout_toRightOf="@id/sign_up"
                android:clickable="true"
                android:onClick="phone"
                android:text="Sign in"
                android:textColor="#086CFC" />


        </LinearLayout>


    </RelativeLayout>


</LinearLayout>